{
    "mcp": {
        "enabled": true,
        "server": {
            "host": "localhost",
            "port": 8000,
            "endpoints": {
                "proxy": "/proxy/intercept",
                "logger": "/logger",
                "vulnerabilities": "/logger/vulnerabilities/severity"
            }
        },
        "tools": {
            "burp": {
                "enabled": true,
                "proxy": {
                    "host": "127.0.0.1",
                    "port": 8080
                }
            },
            "logger": {
                "enabled": true,
                "max_entries": 1000
            }
        }
    },
    "python": {
        "interpreter": "C:\\Users\\username\\AppData\\Local\\Programs\\Python\\Python312\\python.exe",
        "env": {
            "PYTHONPATH": "${workspaceFolder}"
        }
    }
} 